<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_themdonhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6B6B"
            app:titleTextColor="@android:color/white"
            app:title="Thêm đơn hàng"/>

        <!-- Card cho thông tin khách hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN KHÁCH HÀNG"
                android:textStyle="bold"
                android:textColor="#FF6B6B"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Họ tên -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên *"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <AutoCompleteTextView
                android:id="@+id/auto_ten"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:hint="Nhập tên khách hàng"
                android:completionThreshold="1"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp" />

            <!-- Số điện thoại -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại *"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_sodienthoai"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp" />

            <!-- Địa chỉ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ *"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_diachi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="Nhập địa chỉ"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Card cho thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN SẢN PHẨM"
                android:textStyle="bold"
                android:textColor="#FF6B6B"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Chọn sản phẩm -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm *"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <Spinner
                android:id="@+id/sp_SanPham"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <!-- Giá sản phẩm -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_gia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:hint="Giá sản phẩm"
                android:enabled="false"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp"
                android:textColor="#666666" />

            <!-- Số lượng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng *"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_soluong"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:hint="Nhập số lượng"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp" />

            <!-- Ngày đặt -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đặt *"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_ngaydat"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:hint="dd/mm/yyyy"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp" />

            <!-- Tổng tiền -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/edt_tongtien"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="Tổng tiền"
                android:enabled="false"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="15sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card cho mô tả -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GHI CHÚ"
                android:textStyle="bold"
                android:textColor="#FF6B6B"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edt_mota"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Nhập ghi chú thêm..."
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:inputType="textMultiLine"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/bt_huy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="HỦY"
                android:textColor="#FF6B6B"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/bt_luu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="LƯU ĐƠN HÀNG"
                android:textColor="#FF6B6B"
                android:background="#4C51BAC7"
                android:elevation="2dp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>