<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU QUẢN LÝ"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="45dp"
        android:letterSpacing="0.05"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Card Nhà cung cấp -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSupplier"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_purple"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="12dp">

                    <ImageButton
                        android:id="@+id/btnNhaCungCap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_3"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/white"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhà cung cấp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Sản phẩm -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProduct"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_pink"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="12dp">

                    <ImageButton
                        android:id="@+id/btnSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/white"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Hóa đơn -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInvoice"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_blue"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="12dp">

                    <ImageButton
                        android:id="@+id/btnHoaDon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_2"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/white"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hóa đơn"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Khách hàng -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCustomer"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_green"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="12dp">

                    <ImageButton
                        android:id="@+id/btnKhachHanghh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_1"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/white"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khách hàng"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <ImageButton
        android:id="@+id/btnout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:background="@drawable/imageout"
        android:src="@drawable/img_5">
    </ImageButton>
</LinearLayout>