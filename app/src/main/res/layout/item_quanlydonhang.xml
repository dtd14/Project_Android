<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="false"
    android:focusable="false"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:descendantFocusability="blocksDescendants">

        <!-- Hàng 1: Mã đơn + Ngày lập -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_MaDH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="DH01"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tv_Ngaylap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="2025-10-20"
                android:gravity="end"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- Hàng 2: Tên khách + Laptop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_TenKH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Nguyễn Văn A"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tv_Laptop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Dell XPS 13"
                android:gravity="end"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- Hàng 3: Địa chỉ + Tổng tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_Diachi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Nam Định"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tv_Tongtien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="50.000.000 VNĐ"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>