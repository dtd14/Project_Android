<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <!-- Bọc row trong HorizontalScrollView -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_MaDH"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="DH01"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_TenKH"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"/>

            <TextView
                android:id="@+id/tv_Laptop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Dell XPS"/>

            <TextView
                android:id="@+id/tv_Soluong"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="2"/>

            <TextView
                android:id="@+id/tv_Gia"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="25,000,000"/>

            <TextView
                android:id="@+id/tv_Ngaylap"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="01/10/2025"/>

            <TextView
                android:id="@+id/tv_SDT"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="0901234567"/>

            <TextView
                android:id="@+id/tv_Email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="abc@gmail.com"/>
            <TextView
                android:id="@+id/tv_Diachi"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nam Định"/>
            <TextView
                android:id="@+id/tv_Tongtien"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="25000000"/>
            <TextView
                android:id="@+id/tv_Mota"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="bạn gửi vào giờ hành chính"/>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.cardview.widget.CardView>