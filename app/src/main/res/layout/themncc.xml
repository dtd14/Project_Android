<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Nhà Cung Cấp"
            android:background="#03A9F4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã nhà cung cấp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/edit_ma_nha_cung_cap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Mã nhà cung cấp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nhà cung cấp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/edit_ten_nha_cung_cap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Tên nhà cung cấp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>
        <EditText
            android:id="@+id/edit_dia_chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Địa chỉ"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>
        <EditText
            android:id="@+id/edit_so_dien_thoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/edit_ghichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:hint="Ghi chú"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/button_luu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>